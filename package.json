    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/infra/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui:cov": "vitest --ui --coverage.enabled=true",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.mts",
    "test:e2e:ui:cov": "vitest --ui   --coverage.enabled=true --config ./vitest.config.e2e.mts  ",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.mts"
